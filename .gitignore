/web/sites/default/settings.local.php
/web/sites/default/settings.dev.php
/web/sites/default/services.local.yml
/web/sites/default/files/.ht.sqlite

# Archivos de caché y logs
/logs/
/tmp/
/cache/
/private/
/backup/
composer.lock

# Archivos de Composer
composer.phar
auth.json

# Archivos de PHPUnit
phpunit.xml
phpunit.xml.dist
.phpunit.result.cache

# Configuración específica del servidor
/web/sites/default/files/
/web/sites/default/private/
/web/sites/default/files/.htaccess

# Backups y dumps de base de datos
*.sql
*.sql.gz
*.tar
*.zip
*.tgz

