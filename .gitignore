/web/themes/custom/*/build/assets/
/web/themes/custom/*/build/fonts/
/web/themes/custom/*/mix-manifest.json

# Node modules en subdirectorios
**/node_modules/

# Archivos sensibles y configuración local
/hash_salt.php
/web/sites/default/settings.ddev.php
/web/sites/default/settings.local.php
/web/sites/default/settings.ddev.php
/.ddev/
/config/default/google_tag.settings.yml


# Contenido/Media pesado
/video/
/private-files/
/bbdd/

