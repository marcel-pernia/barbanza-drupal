{% if links %}
  <div class="dropdown dropdown-center language-switcher d-flex align-items-center justify-content-center">
    <a href="#" class="language-link dropdown-toggle pe-0" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="{{ current_language_name }}">
      {{ vlsuite_icon_font_icon('language') }} {{ current_language|upper }}
    </a>
    <div class="dropdown-menu" aria-label="{{ 'Language switcher'|t }}">
      {%- for item in links -%}
        {{ item.link }}
      {%- endfor -%}
    </div>
  </div>
{% endif %}
