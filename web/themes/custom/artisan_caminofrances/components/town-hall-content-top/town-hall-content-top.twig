<div class="town-hall-content-top py-5">
    <div class="container">
        {% if media %}
            <div class="row">
                <h1 class="mb-4">{{ title }}</h1>
                
                <div class="col-12">
                    <!-- Primera fila: Imagen a la izquierda del texto -->
                    <div class="row">
                        <div class="col-12 col-lg-4">
                            <div class="town-hall-content-top-image mb-3" style="float: left; width: 100%; margin-right: 20px;">
                                {{ media }}
                            </div>
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="fw-bold mb-3">{{ summary }}</div>
                            {{ description }}
                        </div>
                    </div>

                    <!-- Segunda fila: Imagen a la derecha del texto -->
                    <div class="row mt-3">
                        <div class="col-12 col-lg-8">
                            {{ adddescription }}
                        </div>
                        <div class="col-12 col-lg-4">
                            <div class="town-hall-content-top-image mb-3" style="float: right; width: 100%; margin-left: 20px;">
                                {{ addmedia }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12 mt-5">
                    {{ map }}
                </div>
                <div class="col-12 mt-3 share-buttons">
                    {{ addtoany }}
                </div>
            </div>
        {% else %}
            <div class="row justify-content-center">
                <div class="col-12 col-lg-8">
                    <h1 class="mb-4">{{ title }}</h1>
                    <div class="fw-bold mb-3">{{ summary }}</div>
                    {{ description }}
                    <div class="mt-5">{{ map }}</div>
                    <div class="mt-3 share-buttons">{{ addtoany }}</div>
                </div>
            </div>
        {% endif %}
    </div>
</div>
