<div class="stage-content-top py-5">
 <div class="container">
   {% if media %}
     <h1 class="mb-4">{{ title }}</h1>
     <div class="row">
       <div class="col-12 col-lg-4">
         <div class="stage-content-top-image">
           {{ media }}
         </div>
       </div>
       <div class="col-12 col-lg-8">
         <div class="fw-bold mb-3">{{ summary }}</div>
         {{ description }}
         <div class="mt-3 share-buttons">{{ addtoany }}</div>
       </div>
     </div>
   {% else %}
     <div class="row justify-content-center">
       <div class="col-12 col-lg-8">
         <h1 class="mb-4">{{ title }}</h1>
         <div class="fw-bold mb-3">{{ summary }}</div>
         {{ description }}
		 <div class="mt-3 share-buttons">{{ addtoany }}</div>
         
       </div>
     </div>
   {% endif %}
 </div>
</div>
