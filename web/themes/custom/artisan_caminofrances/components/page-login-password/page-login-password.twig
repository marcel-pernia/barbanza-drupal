{#
/**
 * @file
 * Template for the login page.
 */
#}
{% set attributes = attributes ?: create_attribute() %}
{% set main_attributes = main_attributes ?: create_attribute() %}

<div {{ attributes.addClass('page') }}>
  <main {{ main_attributes.addClass(['content']).setAttribute('id', 'main-content') }}>
    {% block main_content %}
      <div class="row justify-content-center">
        <h1 class="text-center text-body">{{ title|raw|t }}</h1>
        <p class="text-center mb-4">{{ description|raw|t }}</p>
        <div class="col-12 col-lg-6 d-flex justify-content-center align-items-center">
          {% embed 'artisan:navbar-brand' with {
              site_slogan,
              image: image,
              width: '256',
              height: '105',
              path: path('<front>'),
              alt: elements.content.site_name['#markup'] ~ ' logo',
              attributes: create_attribute({'class': ['my-3']}),
            } only %}
          {% endembed %}
        </div>
        <div class="col-12 col-lg-6">
          {{ main_content }}
        </div>
      </div>
      <p class="text-center py-5 py-lg-7">{{ password_reminder|raw }}</p>
    {% endblock %}
  </main>
</div>
